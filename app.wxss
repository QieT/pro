.mt30 { margin-top: 30rpx; }
.mt40 { margin-top: 40rpx; }
.mt50 { margin-top: 50rpx; }
.mt60 { margin-top: 60rpx; }
.clearfloat:after{visibility:hidden; content:""; font-size:0; clear:both; height:0; display:block;}
.clearfloat{zoom:1}
.clear { clear: both; font-size: 0; line-height: 0; height:0; margin:0; padding:0;}
button:after { content: none; }

/* 三角图标 */
.weui-cell-ft:after {
    content: " ";
    display: inline-block;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    height: 8px;
    width: 8px;
    border-width: 1px 1px 0 0;
    border-color: #b2b2b2;
    border-style: solid;
    position: relative;
    margin-left: 10rpx;
}

