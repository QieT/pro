/* pages/select/index.wxss */
.select{
  width: 750rpx;
  height: 88rpx;
  background: #fd7385;
  border: 1rpx solid transparent
}
.write{
  margin: auto;
  width: 690rpx;
  height: 60rpx;
  margin-top: 14rpx;
  border-radius: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 15rpx;
}
.select input{
   font-size: 24rpx;
   color: #fd7385
}
.container {
  width: 702rpx;
  margin: auto;
  margin-top: 19rpx;
  position: relative;
  height: 190rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #dedede;
}

.container image {
  width: 211rpx;
  height: 144rpx;
  display: block;
  border-radius: 4rpx;
}

.text-con {
  line-height: 42rpx;
  height: 84rpx;
  overflow: hidden;
  font-size: 32rpx;
  color: #000;
  width: 465rpx;
}

.time {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  font-size: 28rpx;
  color: #fff;
}

.txt {
  text-align: center;
  margin-top: 80rpx;
  color: rgba(155, 155, 155, 0.6);
}

.read_time {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.artmes {
  margin-top: 26rpx;
  display: flex;
  font-size: 20rpx;
  color: #666;
  justify-content: space-between;
  align-items: center
}

.tosee {
  margin-left: 18rpx;
}

.tomain {
  display: flex;
  align-items: center;
}

.tomain image {
  margin: 10rpx;
  width: 24rpx;
  height: 24rpx;
}

.tomain text {
  width: 66rpx;
}

.line {
  width: 100%;
  margin-top: 14rpx;
}
