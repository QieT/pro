page { background: #fff; color: #161616; }
.fl { float: left; margin-top: 10rpx; }
.fr { float: right; margin-top: 10rpx; }
.padd30 { padding: 0 30rpx 30rpx; }

.container { margin-top: 30rpx; height: 440rpx; position: relative; }
.container image { width: 100%; height: 100%; display: block; }
.text-con { 
	position: absolute; 
	background: rgba(255,206,8,0.6); 
	bottom: 40rpx; 
	font-size: 36rpx; 
	padding:8rpx 36rpx;
	width: -webkit-calc(100% - 36rpx*2);  
	width: calc(100% - 36rpx*2);  
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.time {
	position: absolute;
	top: 28rpx;
	right: 28rpx;
	font-size: 28rpx;
	color: #fff;
}
.txt { text-align:center; margin-top:80rpx; color:rgba(155,155,155,.6);}
.read_time { position: absolute; right: 30rpx; top: 30rpx; font-size: 28rpx; color: #fff; font-weight: bold; }